# Time utilities

TZOFFSETS = {\
    "EET": 7200}

now = datetime.datetime.now(tzlocal())

def isodate(s):
    "Parse string as ISO 8601 format year."
    try:
        d = dateparser.parse(s)
        if d.tzinfo is None:
            d = d.replace(tzinfo=tzutc())
        return d
    except ValueError:
        msg = "Not a valid date: '{0}'.".format(s)
        raise argparse.ArgumentTypeError(msg)

