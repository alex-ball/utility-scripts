    print('You are now searching for programmes called {}.'.format(o[0]))
    isNewConfig = True
if args.rm_prog:
    o = splitConfOpt(args.rm_prog)
    if config.remove_option(programmes, o[0]):
        print('You are no longer searching for programmes called {}.'.format(o[0]))
